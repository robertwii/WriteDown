<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.WriteDown" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowBackground">@color/darkBackground</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item> <!-- Example, replace with your color -->
        <item name="colorPrimaryVariant">@color/purple_700
        </item> <!-- Example, replace with your color -->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item> <!-- Example, replace with your color -->
        <item name="colorSecondaryVariant">@color/teal_700
        </item> <!-- Example, replace with your color -->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Custom Dialog Theme for the Delete Prompt -->
    <style name="CustomDeleteDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_rounded_background</item>
        <item name="android:textColorPrimary">@color/dialog_text_color_primary
        </item> <!-- Title and Message text color -->
        <item name="colorAccent">@color/dialog_button_text_color
        </item> <!-- Often influences button text color -->

        <!-- Specific Button Styling -->
        <item name="buttonBarPositiveButtonStyle">@style/CustomDeleteDialogButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/CustomDeleteDialogButton</item>
        <item name="buttonBarNeutralButtonStyle">@style/CustomDeleteDialogButton</item>
    </style>

    <style name="CustomDeleteDialogButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/dialog_button_text_color</item>
    </style>

    <!-- Define placeholder colors if not already defined (used in AppTheme example above) -->
    <color name="purple_200">#36454F</color>
    <color name="purple_500">#36454F</color>
    <color name="purple_700">#36454F</color>
    <color name="teal_200">#FF03DAC5</color>
    <color name="teal_700">#FF018786</color>
    <color name="white">#FFFFFF</color>
    <color name="black">#000000</color>
    <color name="button_gray">#A9A9A9</color>
    <color name="gray_button">#333333</color>

    <!-- Colors for Custom Dialog -->
    <color name="dialog_custom_background">#7393B3</color> <!-- Your specified color -->
    <color name="dialog_text_color_primary">#FFFFFF</color> <!-- For Title and Message -->
    <color name="dialog_button_text_color">#FFFFFF</color>
</resources>
